<?xml version="1.0"?>
<launch>
	<arg name="model"/>
	<param name="robot_description" textfile="$(find x_description)/urdf/pan_tilt/pan_tilt.urdf"/>
	<param name="use_gui" value="true"/>
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find x_description)/urdf/pan_tilt/pan_tilt.urdf.rviz" required="true"/>
</launch>